<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#8fc2e0"
tools:context=".BeginOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="81dp"
            android:layout_marginRight="81dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingTop="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/call"
            android:layout_weight="1"
            android:onClick="callIntent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/bloodButton"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/bloodbutton"
                android:layout_weight="1"
                android:onClick="openBloodOne"
                />

            <ImageButton
                android:id="@+id/burns"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/burns"
                android:layout_weight="1"
                android:onClick="openBurnsOne"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLOOD"
                android:fontFamily="@font/gotham_light"
                android:textColor="@android:color/black"
                android:textSize="12pt"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BURNS"
                android:fontFamily="@font/gotham_light"
                android:textColor="@android:color/black"
                android:textSize="12pt"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/cpr"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/cpr"
                android:layout_weight="1"
                android:onClick="opencprone"
                />

            <ImageButton
                android:id="@+id/fainting"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/fainting"
                android:layout_weight="1"
                android:onClick="openFainting"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPR"
                android:fontFamily="@font/gotham_light"
                android:textColor="@android:color/black"
                android:textSize="12pt"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                />

            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="FAINTING"
                android:fontFamily="@font/gotham_light"
                android:textColor="@android:color/black"
                android:textSize="12pt"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/hospitalhome"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/hospitalhome"
                android:layout_centerHorizontal="true"
                android:onClick="openHomePage"
                />

            <ImageButton
                android:id="@+id/buttonback"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/buttonback"
                android:layout_toLeftOf="@+id/hospitalhome"
                android:layout_centerInParent="true"
                android:onClick="openHomePage"
                />

            <ImageButton
                android:id="@+id/buttonnext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/buttonnext"
                android:layout_toRightOf="@+id/hospitalhome"
                android:layout_centerInParent="true"
                android:onClick="openBeginTwo"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>