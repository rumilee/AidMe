<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8fc2e0"
    tools:context=".MainActivity_HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AidMe"
                android:fontFamily="@font/gotham_light"
                android:textColor="@android:color/white"
                android:textSize="32pt"
                android:textAlignment="center"
                android:paddingTop="32dp"
                />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/mascotcrop"
            />


        <ImageButton
            android:id="@+id/begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/beginbutton"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:onClick="openBeginOne"/>

        <ImageButton
            android:id="@+id/mykit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/kitbutton"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:onClick="openMyKit"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>